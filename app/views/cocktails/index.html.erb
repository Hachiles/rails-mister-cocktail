<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.covigneron.com/wp-content/uploads/2019/01/coctails-a-base-de-vin.jpg);">
  <div class="container">
    <h1>The Cocktail App</h1>
    <p>Discover our creations</p> 
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag cocktail.photo.key, class: "card-img-top", height: 210 %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to "More details", cocktail_path(cocktail), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
